{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",

        "importHelpers": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,

        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "skipLibCheck": true,
        "outDir": "./dist", // 指定输出目录
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "types": ["node", "vite/client"]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "types/**/*.d.ts",
        "vite.config.ts"
    ],
    /** 编译器默认排除的编译文件 */
    "exclude": ["node_modules", "dist", "**/*.js"]
}
